<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_contributor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:padding="4dp"
        android:id="@+id/list_item_contributor_name_text_view"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:id="@+id/list_item_contributor_image_view"
        android:layout_toRightOf="@id/list_item_contributor_name_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_contributor_count_text_view"
        android:layout_below="@id/list_item_contributor_image_view"/>

</RelativeLayout>